# Database
DATABASE_URL="postgresql://user:password@localhost:5432/smart_business_assistant?schema=public"

# JWT
JWT_SECRET="your-secret-key-change-in-production"
JWT_EXPIRES_IN="7d"

# Server
PORT=3000
NODE_ENV="development"

# Twilio (SMS)
TWILIO_ACCOUNT_SID=""
TWILIO_AUTH_TOKEN=""
TWILIO_PHONE_NUMBER=""

# Vapi (Voice)
VAPI_API_KEY=""
VAPI_PHONE_NUMBER=""

# Stripe (Payments)
STRIPE_SECRET_KEY=""
STRIPE_WEBHOOK_SECRET=""

# Feature Flags
FEATURE_RLS_ENABLED="false"  # Enable PostgreSQL Row-Level Security

# Redis (Caching)
REDIS_URL=""  # e.g., redis://localhost:6379

# Storage (S3 or Local)
STORAGE_PROVIDER="local"  # "s3" or "local"
STORAGE_LOCAL_PATH="./uploads"
API_BASE_URL="http://localhost:3001"

# AWS S3 (if STORAGE_PROVIDER=s3)
AWS_REGION="us-east-1"
AWS_S3_BUCKET=""
AWS_ACCESS_KEY_ID=""
AWS_SECRET_ACCESS_KEY=""
